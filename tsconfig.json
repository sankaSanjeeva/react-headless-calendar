{
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist",

    // Environment Settings
    "module": "ESNext",
    "target": "es2020",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,

    "strict": true,
    "noImplicitAny": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    // Build Hygiene
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_module", "dist"]
}
